<%= render partial: "layouts/single_center_top" %>

  <h3>Search</h3>

  <%= form_tag('/search', method: :post) do %>
    <%= hidden_field_tag "authenticity_token", form_authenticity_token %>
    <p>
      <%= label_tag "List (enter lists id or leave blank for any):" %><br>
      <%= text_field_tag "search[list_id]" %>
    </p>
    <p>
      <%= label_tag "Search term:" %><br>
      <%= text_field_tag "search[query]" %>
    </p>

    <%= submit_tag "Search" %>
  <% end %>

  <%= render partial: "search_results", locals: {results: @results, query: @query} %>

<%= render partial: "layouts/single_center_bottom" %>
